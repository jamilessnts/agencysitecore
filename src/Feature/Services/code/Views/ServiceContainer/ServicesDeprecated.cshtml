    }
    else
    {
        <div class="container">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">Teste Titulo)</h2>
                <h3 class="section-subheading text-muted">TESTE SUBTITULO</h3>
                
                @*<h2 class="section-heading text-uppercase">@Editable(x => x.Title)</h2>
                <h3 class="section-subheading text-muted">@Editable(x => x.Subtitle)</h3>*@
            </div>
        </div>
    }

}
else if (!IsInEditingMode && Html.Glass().Model != null)
{
